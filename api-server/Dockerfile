FROM node:8-alpine
WORKDIR /app
EXPOSE 3100
EXPOSE 8100
ENV ENVIRONMENT development
ENV SERVER_HOST 0.0.0.0
ENV SERVER_PORT 3100
ENV SERVER_PORT_OUT 3100
ENV DATABASE_CONNECTION_HOST database
ENV DATABASE_CONNECTION_PORT 27017
ENV SERVER_SOCKET_PORT 8000
ENV SERVER_SOCKET_PORT_OUT 8000
COPY package.json ./
RUN yarn install
COPY . .
CMD ["yarn", "start"]
